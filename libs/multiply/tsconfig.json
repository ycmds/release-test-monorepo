{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib-tsc",
    "declaration": true,
    "sourceMap": true,
    "target": "ES2023",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "tests"
  ]
}